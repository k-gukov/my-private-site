<textcomponents>

	<component id="ID_title">
		<text><![CDATA[<b>Настройка шифрования пароля</b>]]></text>
	</component>
	
	
	<!--Syntax Checker Body Text-->
	<component id="ID_SC5" fontFace="_typewriter" fontSize="12" fontColor="#ffffff">
	
		<text></text>		
		
		<feedback id="fb"><![CDATA[<span><font face="_sans"><span><b>***</b></span>Необходимо безошибочно ввести весь текст команды. Команды, которые содержат имя или пароль, нужно вводить с учетом регистра.<span><b>***</b></span></font></span>]]></feedback>	
		
		<existingcommands><![CDATA[<font face="_sans"><b>Введите команду для шифрования паролей в виде незашифрованного текста.</b></font>]]></existingcommands>
		
		<command prompt="Switch(config)#" id="cmd1" node="start">
			<correctresponse id="cr1" ignoreCase = 'true'><![CDATA[service password-encryption]]></correctresponse>
			<deviceresponse id="dr1"><![CDATA[<span></span>]]></deviceresponse> 
			<instruction id="ins1"><![CDATA[<font face="_sans"><b>Введите команду для шифрования паролей в виде незашифрованного текста.</b></font>]]></instruction>			
		</command>
		
		<command prompt="Switch(config)#" id="cmd2">
			<correctresponse id="cr2" ignoreCase = 'true'><![CDATA[exit]]></correctresponse>
			<deviceresponse id="dr2"><![CDATA[<span></span>]]></deviceresponse>
		</command>
		
		<command prompt="Switch#" id="cmd3" node="end">
			<correctresponse id="cr3" ignoreCase = 'true'><![CDATA[show running-config]]></correctresponse>
			<deviceresponse id="dr3"><![CDATA[!<br><font face="_sans">&lt;выходные данные опущены&gt;</font><br>!<br>line con 0<br> password 7 094F471A1A0A <br> login<br>!<br>line vty 0 4<br> password 7 03095A0F034F38435B49150A1819<br> login<br>!<br>!<br>end<br><br>Switch#
			]]></deviceresponse>
			<instruction id="last"><![CDATA[<font face="_sans"><b>Шифрование паролей в виде незашифрованного текста выполнено.</b></font>]]></instruction>
		</command>		
		
		<command prompt="" />
	
	</component>
	<!--End Syntax Checker Body Text-->
	
